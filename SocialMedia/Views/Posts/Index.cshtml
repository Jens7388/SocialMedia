@model IEnumerable<Models.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="album py-5 bg-light">
    <div class="container">
        <div class="w-100">
            @foreach(var item in Model)
            {
                <div class="col-md-4 mw-100">
                    <div class="card mb-4 box-shadow">
                        @if(item.Image != null)
                        {
                            <img class="card-img-top" src="@item.Image" alt="Card image cap">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                                    <button type="button"class="btn btn-sm btn-outline-secondary">Reply</button>
                                    @if(item.User.UserName == User.Identity.Name)
                                    {
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                                    }

                                </div>
                                <small class="text-muted">@{item.Created.ToString("dd/MM@HH:mm");} @item.User.UserName</small>
                            </div>
                        </div>
                    </div>
                </div>;
            }
        </div>
    </div>
</div>
